<%- include header %>
<ol class="breadcrumb">
    <li><a href="/manager">后台首页</a></li>
    <li><a href="/manager/log?view=manager/log&page=1">公告管理</a></li>
    <li class="active">添加公告</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">发布公告</div>
    <div class="panel-body">
        <form role="form" action="javascript:;">
            <div class="form-group">
                <label class="l-margin-top-17">标题</label>
                <i class="pull-right text-primary">您还可以输入 <i class="number js-add-log-name-chars">50</i> 个字符</i>
                <input type="text" class="form-control js-add-log-name" placeholder="公告标题" autofocus
                       maxlength="50"/>
            </div>
            <div class="form-group">
                <label>内容</label>
                <%- include ../editor %>
                <!--<textarea class="js-add-log-content form-control l-heigh-200"></textarea>-->
            </div>
            <div class="form-group">
                <div class="l-padding-vertical">
                    <button type="submit" class="btn btn-primary col-sm-1 col-xs-12 js-add-log-btn pull-right">发布公告
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include footer %>
<script>
    $(function () {
        $('.js-log-manager').addClass("bg-black");
    });
</script>

